// *** Colors
colors = {
	green: #3cdbc0,
	purple: #9a26b6,
	black: #000000,
	gray: #b1b1b1,
	lightGray: #f5f5f5
}

bodyColor = colors.black
bodyBg = #fff
linkColor = colors.green
linkHover = colors.purple
btnColor = colors.green

// *** Fonts
fontFamily = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
fontPrimary = 'Roboto', sans-serif
fontSize = 24px;
lineHeight = 1.4
vSpace = 20px

// *** Transition
trs =  0.5s

// *** containers
containers = {
	tiny: 800px
	main: 1240px
}

// *** Breakpoints
breakpoints = {
	xs: 0
	sm: 576px
	md: 820px
	lg: 992px
	xl: 1200px
	xxl: 1460px
}

mobileMaxWidth = breakpoints.md - 0.02px
tabletMinWidth = breakpoints.md
tabletMaxWidth = breakpoints.lg - 0.02px
notebookMinWidth = breakpoints.lg
notebookMaxWidth = breakpoints.xl - 0.02px
desktopMinWidth = breakpoints.xl
desktopMaxWidth = breakpoints.xxl - 0.02px
widescreenMinWidth = breakpoints.xxl