.c-tab
	margin-top 70px
	margin-bottom 100px
	.tab-list
		display flex
		flex-direction row
		margin-bottom 48px
		span
			color #b1b1b1
			font-size 19px
			border-bottom 2px solid #b1b1b1
			width 25%
			padding 15px 0
			cursor pointer
			transition color trs, border trs
			&:hover
				color #000
			&.active
				color #000
				border-color #000

	.tab-content
		.js-tab-btn
			display none

		.js-tab
			opacity 0
			display none
			&.active
				opacity 1
				animation activeTab 1s
				display grid
				grid-template-columns 1fr 1fr 1fr
				grid-gap 30px
	
			*::-ms-backdrop, &.active
				grid-template-columns 1fr 1fr 1fr
				grid-template-areas "a b c"
				grid-column-gap 30px


	@media (max-width: mobileMaxWidth)
		margin-top 50px
		margin-bottom 50px
		.tab-list
			display none
		.tab-content
			.js-tab-btn
				background #f5f5f5
				margin-top 2px
				display block
				padding 10px
				cursor pointer
				transition background trs
				&.active
					background: colors.green
			
			.js-tab
				&.active
					display block
					margin 30px 0

@keyframes activeTab
	0%
		opacity 0
	100%
		opacity 1